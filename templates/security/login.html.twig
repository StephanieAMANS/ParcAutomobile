{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <!--- Haut de page --->
    <div class="row connexionTitle">
        <div class="container-fluid col-md-6 text-center fs-4 bold mt-5">
            <div class="col-md-12">
                <p>Bienvenue sur l'application Parc Automobile</p>
            </div>
        </div>
    </div>
    <!--- Contenu connexion --->
    <div class="row login">
        <div class="form-login col-6 col-sm-4 col-md-2 col-lg-5 mx-auto justify-content-center border border-color border-2 mt-5">
            <h1 class="fs-4 text-center mt-3">Connexion</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

            <div class="form-group">
                <div class="row justify-content-center mt-4">
                     <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Identifiant" autocomplete="username" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <div class="row justify-content-center mt-4">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
                </div>
            </div>
                <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
            <div class="form-group">
                <div class="d-grip gap-2 d-md-flex justify-content-center">
                    <button class="btn btn-color w-25 mt-5 mb-4" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}
